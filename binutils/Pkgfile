# Description: The GNU Binutils are a collection of binary tools
# URL:         http://sources.redhat.com/binutils/
# Maintainer:  CRUX System Team, core-ports at crux dot nu

name=binutils
version=2.18.92
release=1
source=(ftp://sourceware.org/pub/binutils/snapshots/$name-$version.tar.bz2)

build() {
    sed -i '/^SUBDIRS/s/doc//' $name-$version/bfd/Makefile.in
    mkdir build
    cd build
    ../$name-$version/configure --prefix=/usr \
                                --enable-shared \
                                --disable-nls
    make tooldir=/usr
    make check
    make tooldir=/usr DESTDIR=$PKG install
    cp ../$name-$version/include/libiberty.h $PKG/usr/include
    rm -rf $PKG/usr/info
    sed -i "s|-L$SRC[^ ]* ||g" $PKG/usr/lib/libbfd.la
}

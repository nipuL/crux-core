# Description: Sed - streams editor
# URL:         http://www.gnu.org/software/sed//sed.html
# Maintainer:  Per Lidén <per@fukt.bth.se>

name=sed
version=4.1.5
release=1
source=(http://mirrors.sunsite.dk/gnu/$name/$name-$version.tar.gz)

build() {
    cd $name-$version
    ./configure --prefix=/usr \
		--exec-prefix=/ \
		--disable-nls
    make
    make DESTDIR=$PKG install
    rm -rf $PKG/usr/info
}

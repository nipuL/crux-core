# Description: Multiple precision floating-point computation library with cumulative patches.
# URL: http://www.mpfr.org/
# Maintainer: Lucas Hazel, lucas at die dot net dot au
# Packager: acrux, acrux at homelinux dot org
# Depends on: libgmp

name=libmpfr
version=2.4.1
release=1
source=(http://www.mpfr.org/mpfr-$version/mpfr-$version.tar.bz2
        $name-$version-patch{01,02})

build() {
    cd mpfr-$version
    cat $SRC/$name-$version-patch* | patch -p1
    ./configure --prefix=/usr
    make
    make DESTDIR=$PKG install
    rm -r $PKG/usr/share
}


# Description: Miscellaneous system utilities
# URL:         http://userweb.kernel.org/~kzak/util-linux-ng/
# Maintainer:  CRUX System Team, core-ports at crux dot nu
# Arch Maintainer: Lucas Hazel, lucas at die dot net dot au
# Depends on:  ncurses zlib

name=util-linux-ng
version=2.16.1
release=1
source=(http://ftp.kernel.org/pub/linux/utils/$name/v2.16/$name-$version.tar.bz2)

build() {
    cd $name-$version

    ./configure --prefix=/usr \
                --mandir=/usr/man \
                --disable-{nls,wall} \
                --enable-{write,rdev,raw,kill}
    make
    make DESTDIR=$PKG install

    install -d $PKG/{etc,var/{lib/libuuid,run/uuidd}}
    touch $PKG/etc/adjtime

    rm -r $PKG/usr/share
    rm $PKG/sbin/{mkfs.bfs,mkfs.minix,fsck.minix}
    rm $PKG/usr/man/man8/{fsck.minix,mkfs.bfs,mkfs.minix}.8
}
